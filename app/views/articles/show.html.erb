<h3><%= @article.title %></h3>
<p>Author: <%=link_to "#{@article.user.first_name} #{@article.user.last_name}", user_path(@article.user.id) %></p>
<p><%= @article.content %></p>

<% if current_user == @article.user %>
	<p><%= link_to "Edit", edit_article_path(@article.id), class: 'btn btn-primary' %>
	<%= button_to "Delete", article_path(@article),
	 { method: :delete, data: { confirm: "Are you sure you want to delete '#{@article.title}'?"}, class: 'btn btn-danger' } %></p>
<% end %>