<div class="container">
	<img class="city_photo" src = "<%= @city.photo %>"
</div>

<div class="container">
	<p><%= @city.name %></p>
</div>

<div class = "container">
  <h2>Articles</h2>
	<ul>
      <% @city.articles.order(created_at: :desc).each do |article| %>
 		
      <li><strong><%= link_to article.title, article_path(article.id) %> - <%= article.created_at.strftime("%B %-d, %Y, at %l:%M%P") %></strong></li>
		<% end %>
    </ul>
	<%= button_to "New Post", city_new_article_path, :method => :get, class: 'btn btn-primary' %>   
</div>        	


