<h1><%= @user.first_name %>'s profile</h1>

<div class = "container">

 	<h3><%= @user.first_name %> <%= @user.last_name %></h3>
  <p><strong>E-mail</strong> <%= @user.email %></p>
  <p><strong>Current City</strong> <%= @user.current_city %></p>
  <p><strong>Join Date</strong> <%= @user.created_at.strftime("%B %-d, %Y, at %l:%M%P") %></p>
  <p><img class="photo" src = "<%= @user.profile_photo %>" </p>

<% if current_user == @user %>
  <div class = "buttons">
    <%= link_to "Edit", edit_user_path(@user.id) %>
    <%= button_to "Delete", @user, method: :delete %>
  </div>
<% end %>
</div>

<div class = "container">
  <h2>Articles</h2>
    <ul>
      <% @user.articles.each do |article| %>
        <li><strong><%= link_to article.title, article_path(article.id) %></strong></li>
        <% if current_user == article.user %>
        	<div class = "button">
            <%= link_to "Edit", edit_article_path(article.id), class: 'btn btn-primary' %>
  <%= button_to "Delete", article_path(article),
   { method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' } %>
        	</div>
        <% end %>
      <% end %>
    </ul>
</div>

